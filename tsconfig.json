{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2020",
    "lib": ["DOM", "es2022.String", "es2022"],
    "target": "es2021",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "downlevelIteration": true,
    "emitDeclarationOnly": true,
    "baseUrl": "./src",
    "paths": {
      "src/*": ["src/*"],
      "types/*": ["src/types/*"]
    }
  },
  "include": ["scripts/**/*", "src/**/*", "src/types/**/*"],
  "exclude": ["./**/node_modules/**/**"]
}
